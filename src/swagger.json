        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "paciente": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "number"
                  },
                  "telefone": {
                    "type": "number"
                  },
                  "idade": {
                    "type": "number"
                  },
                  "especialidade": {
                    "type": "string"
                  } 
